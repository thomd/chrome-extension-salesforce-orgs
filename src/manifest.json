{
  "manifest_version": 3,
  "name": "Salesforce Org Manager",
  "version": "1.2.1",
  "description": "Manage Salesforce Orgs",
  "author": {
    "email": "thomduerr@gmail.com"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-256.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage", "scripting", "webNavigation", "tabs"],
  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/*", "https://*.site.com/*", "https://*.salesforce-experience.com/*", "https://*.force.com/*"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon-128.png"],
      "matches": []
    }
  ]
}
